{
	"name": "remote-mcp-server-authless",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"start": "wrangler dev",
		"cf-typegen": "wrangler types",
		"prepare": "husky",
		"schema:build:json": "tsx typescript/scripts/generate-tool-schema.ts",
		"schema:build:python": "bash python/scripts/generate-pydantic-models.sh",
		"schema:build": "pnpm run schema:build:json && pnpm run schema:build:python",
		"format:typescript": "biome format --write",
		"lint:typescript": "biome lint --fix",
		"test:typescript": "vitest",
		"test:typescript:integration": "vitest run --config vitest.integration.config.mts",
		"test:typescript:watch": "vitest watch",
		"typecheck:typescript": "tsc --project typescript/tsconfig.json --noEmit",
		"format:python": "cd python && uv run ruff format .",
		"lint:python": "cd python && uv run ruff check --fix .",
		"test:python": "cd python && uv run pytest tests/ -v",
		"typecheck:python": "cd python && uvx ty check",
		"typecheck": "pnpm run typecheck:typescript && pnpm run typecheck:python",
		"format": "pnpm run format:typescript && pnpm run format:python",
		"lint": "pnpm run lint:typescript && pnpm run lint:python",
		"test": "pnpm run test:typescript && pnpm run test:python"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.15.34",
		"dotenv": "^16.4.7",
		"husky": "^9.1.7",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vite": "^5.0.0",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"wrangler": "^4.14.4",
		"zod-to-json-schema": "^3.24.6"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.11.1",
		"@types/dotenv": "^6.1.1",
		"agents": "^0.0.80",
		"posthog-node": "^4.18.0",
		"zod": "^3.24.4"
	},
	"packageManager": "pnpm@9.15.5+sha256.8472168c3e1fd0bff287e694b053fccbbf20579a3ff9526b6333beab8df65a8d"
}
